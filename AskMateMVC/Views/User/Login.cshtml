@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" required />
            </div>
            <div class="form-group">
                <input type="submit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to the Front Page</a>
</div>