
@{
    ViewData["Title"] = "List";
}
@model List<QuestionModel>

<h1>All questions:</h1>
<br /><br />
@*@if(Model.Count==0)
{
    <a>Currently no questions on the page!</a>
}*@
@foreach (var question in Model)
{
<div class="card">
    <p><div>@question.TimeOfQuestion</div><div>Views: @question.ViewNumber</div><div>Votes: @question.VoteNumber</div></p>
    <h2>     @Html.ActionLink(@question.Title, "AnswersForQuestion", new { id = question.ID }, null)</h2>
    <div>
        <p>  @question.Message</p>
        <form action="EditQuestion">
            <button type="submit">Edit</button>
            @Html.ActionLink("Edit", "EditQuestion", new { id = question.ID }, null)
        </form>
    </div>
    

    <form>
        <button type="submit">Delete</button>

    </form>
    <form>
        @Html.ActionLink("Write answer", "NewAnswer", new { id = question.ID }, null)

    </form>

</div>
}
    
