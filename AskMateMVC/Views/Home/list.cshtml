
@{
    ViewData["Title"] = "List";
}
@model List<QuestionModel>

<h1>All questions:</h1>
<br /><br />
@*@if(Model.Count==0)
{
    <a>Currently no questions on the page!</a>
}*@
@foreach (var question in Model)
{
<div style="border:solid">
    <h2>     @Html.ActionLink(@question.Title, "AnswersForQuestion", new { id = question.ID }, null)</h2>
    <div>
        <h3>@question.Message</h3>

        <form action="QuestionDetails">

            @Html.ActionLink("Details", "QuestionDetails", new { id = question.ID }, null)
        </form>
    </div>
    <form action="EditQuestion">
        <button type="submit">Edit</button>
        @Html.ActionLink("Edit", "EditQuestion", new { id = question.ID }, null)
    </form>

    <form>
        <button type="submit">Delete</button>
        @Html.ActionLink("Delete", "DeleteQuestion", new { id = question.ID }, null)
    </form>
    <form>
        @Html.ActionLink("Write answer", "NewAnswer", new { id = question.ID }, null)

    </form>

</div>
}
    
