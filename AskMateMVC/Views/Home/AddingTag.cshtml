@model TagModel

@{
    ViewData["Title"] = "AddingTag";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddingTag">
            <div class="form-group">
                <input type="hidden" id="questionId" name="questionId" value=@ViewBag.questionId runat="server">
                <input name="Url_i" id="Url_i" class="form-control" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <form asp-action="AddingTag" method="post">
            <input type="hidden" id="questionId" name="questionId" value=@ViewBag.questionId runat="server">
            @Html.DropDownListFor(x => x.Url, new SelectList(ViewBag.Tags, "Url", "Url"))
            <input type="submit" value="Add" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="list">Back to the Questions</a>
</div>