@{
    ViewData["Title"] = "Home Page";
}
@model List<QuestionModel>

<div>
    @foreach (var item in Model)
    {
    <div class="card">
        <table>
            <caption>Vote: @item.VoteNumber</caption>
            <thead>
                <tr>
                    <th>@item.TimeOfQuestion</th>
                    <th colspan="2">Views: @item.ViewNumber </th>
                </tr>
            </thead>
            <tbody>
                <tr><td><h2>@item.Title</h2></td> </tr>
                <tr><td><h4>@item.Message</h4></td> </tr>
            </tbody>
            <tfoot>

            </tfoot>
            
        </table>
        
        
        
        
    </div>
    }
</div>
